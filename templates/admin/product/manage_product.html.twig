{% extends 'admin/layout.html.twig' %}
{% set menu_admin_product = true %}
{% block body %}
    {# <div class="container"> #}
    {{ form_start(form) }}
    <section class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3>Gestion produit</h3>
                </div>
                <div class="card-body">
                    {{ form_row(form.taxon) }}
                    {{ form_row(form.label) }}
                    {{ form_row(form.description) }}
                    <div class="form-group">
                        {{ form_label(form.tags) }}
                        <select id="{{ form.tags.vars.id }}" name="{{ form.tags.vars.full_name }}" class="choices form-select multiple-remove" multiple="multiple">
                            {% for item in product.getTagsToArray() %}
                                <option selected value="{{ item }}">{{ item }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="formFileSm" class="form-label">Image couverture de produit</label>
                        <input  name="{{ form.image.vars.full_name }}" class="form-control form-control-sm" id="{{ form.image.vars.id }}" type="file">
                    </div>
                    {% if product.image is not empty %}
                        <img src="{{ asset('product_image/'~product.image) }}" width="100" height="100" alt="">
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3>Gestion des prix</h3>
                </div>
                <div class="card-body">
                    {{ form_row(form.price) }}
                    {{ form_row(form.discount) }}
                </div>
            </div>
        </div>
    </section>

    <section>
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3>Gestion de promotion</h3>
                    </div>
                    <div class="card-body">
                        {{ form_row(form.isPromo) }}
                        {{ form_row(form.promoDiscount) }}
                        {{ form_row(form.isNewness) }}
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header"><h3>Gestion de stock</h3></div>
                    <div class="card-body">
                        {{ form_row(form.stock) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="form-group d-flex justify-content-center">
        <button type="submit" class="btn btn-primary" value="enregistrer">Enregistrer</button>
    </div>
    {{ form_row(form._token) }}
    {{ form_end(form, {'render_rest' : false}) }}
    {# </div> #}
{% endblock %}
